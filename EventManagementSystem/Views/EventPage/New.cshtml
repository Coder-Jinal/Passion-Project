@model EventManagementSystem.Models.EventDto

@{
    ViewData["Title"] = "Add New Event";
}

<h1 class="page-title">Add New Event</h1>

<hr />

<!-- Form container -->
<div class="form-container">
    <form id="eventForm" asp-action="Add" onsubmit="return validateForm()">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- Event Name -->
        <div class="form-group">
            <label asp-for="EventName" class="control-label">Event Name:</label>
            <input asp-for="EventName" class="form-control" id="eventName" />
            <span asp-validation-for="EventName" class="text-danger"></span>
        </div>

        <!-- Description -->
        <div class="form-group">
            <label asp-for="Description" class="control-label">Description:</label>
            <input asp-for="Description" class="form-control" id="description" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!-- Location -->
        <div class="form-group">
            <label asp-for="Location" class="control-label">Location:</label>
            <input asp-for="Location" class="form-control" id="location" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>

        <!-- Date -->
        <div class="form-group">
            <label asp-for="Date" class="control-label">Date:</label>
            <input asp-for="Date" class="form-control" id="date" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>

        <!-- Submit Button -->
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-submit" />
            <a class="btn btn-cancel" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script>
    function validateForm() {
        let isValid = true;

        // Get input values
        let eventName = document.getElementById("eventName").value.trim();
        let description = document.getElementById("description").value.trim();
        let location = document.getElementById("location").value.trim();
        let date = document.getElementById("date").value.trim();

        // Clear previous error messages
        document.getElementById("eventNameError").innerText = "";
        document.getElementById("descriptionError").innerText = "";
        document.getElementById("locationError").innerText = "";
        document.getElementById("dateError").innerText = "";

        // Event Name Validation
        if (eventName === "") {
            document.getElementById("eventNameError").innerText = "This field cannot be empty.";
            isValid = false;
        }

        // Description Validation
        if (description === "") {
            document.getElementById("descriptionError").innerText = "This field cannot be empty.";
            isValid = false;
        }

        // Location Validation
        if (location === "") {
            document.getElementById("locationError").innerText = "This field cannot be empty.";
            isValid = false;
        }

        // Date Validation
        if (date === "") {
            document.getElementById("dateError").innerText = "This field cannot be empty.";
            isValid = false;
        }

        return isValid;
    }
</script>

